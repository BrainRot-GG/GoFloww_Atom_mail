        border: none;
        padding: 8px;
        font-size: 14px;
        outline: none;
    }
    
    .to-field, .subject-field {
        border-bottom: 1px solid #ddd;
        padding: 5px 0;
    }
    
    .message-box {
        width: 100%;
        height: 150px;
        border: none;
        resize: none;
        font-size: 14px;
        padding: 10px;
        outline: none;
    }
    
    .footer {
        position: relative;
        top: 120px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 10px;
        border-top: 1px solid #ddd;
    }
    
    .footer .s-button {
        background-color: #8d00a3;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 20px;
        cursor: pointer;
    }
    
    .icons {
        display: flex;
        gap: 18px;
        right :0px;
        font-size: 18px;
        color: rgb(0, 0, 0);
        cursor: pointer;
    }
     /* inbox */
    
     .headerinbox{
        position:fixed;
